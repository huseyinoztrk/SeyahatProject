@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<div class="content">
    <div class="wrap">
        <div class="about">
            <h3>Hakkımızda</h3>
        </div>
        <br />
        <div class="slider" style="margin-left:120px; width:80%; height:80%;">
            <ul class="rslides" id="slider1">
                @foreach (var x in Model)
                {
                    <li>
                        <img src="@x.BlogImage" alt="">
                        <p style="margin-left:220px; font-size:20px; font-family:Lucida Handwriting; ">@x.Baslik</p>
                    </li>

                }
            </ul>
        </div>
    </div>
</div>

