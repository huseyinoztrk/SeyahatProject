@model Blog

<div class="right">
    <div class="bot-left">
        <img src="@Model.BlogImage" alt="" />
    </div>
    <div class="left-text">

        <h4>@Model.Baslik</h4>
        <span class="doller">@Model.Tarih.ToString("dd.MM.yyyy")</span>
        @if (Model.Aciklama.Length >= 80)
        {
            <p>@Model.Aciklama.Substring(0,80)...</p>
        }
        else
        {
            <p>@Model.Aciklama...</p>
        }
        <p><a href="/Blog/BlogDetay/@Model.ID/"><span class="read">Devamını Oku >></span></a></p>
    </div>
</div>